# Commands
# -i <pack.file>  installs package
# -e <pack.name>  uninstall package
# --prefix <path>   sets the installation path
# --test      don't install, but tell if it would work or not
# -qpl        query + package + list, list all the files in RPM

# Var definitions
%define __requires_exclude libmpi*.*$|libgsl*

%define name    ear
%define release   @VERSION_MAJOR@
%define version   @VERSION_MAJOR@.@VERSION_MINOR@
%define _build_id_links none

# Information
# Prefix  Just for when missing any prefix
Summary:  EAR package
Group:    System
Packager: EAR Team
URL:    https://github.com/BarcelonaSupercomputingCenter/ear_private
License:  BSD-3 license for individual/non-commercial use and EPL-1.0 license for commercial use
Name:   %{name}
Version:  %{version}%{?dist}
Release:  %{release}
Source:   %{name}â€‘%{version}.tar.gz
Buildroot:  %{_topdir}/BUILDROOT
Prefix:   @prefix@
Prefix: @sysconfdir@

# Brief description of the project
%description
EAR RPM package includes the daemons, configuration files
and tools required to make EAR works in your cluster.

# RPMBuild context
%prep
mkdir -p  %{buildroot}/
mkdir -p  %{buildroot}/@prefix@/include
mkdir -p  %{buildroot}/@prefix@/lib
mkdir -p  %{buildroot}/@prefix@/lib/plugins
mkdir -p  %{buildroot}/@prefix@/sbin
mkdir -p  %{buildroot}/@prefix@/bin
mkdir -p  %{buildroot}/@prefix@/bin/tools
mkdir -p  %{buildroot}/@sysconfdir@/ear
mkdir -p  %{buildroot}/@sysconfdir@/ear/coeffs
mkdir -p  %{buildroot}/@sysconfdir@/systemd/system
mkdir -p  %{buildroot}/@sysconfdir@/module
mkdir -p  %{buildroot}/@sysconfdir@/slurm
mkdir -p  %{buildroot}/@sysconfdir@/scripts
mkdir -p  %{buildroot}/@localstatedir@

cp    -rp ${EAR_INSTALL_PATH}/bin/tools/* %{buildroot}/@prefix@/bin/tools/
cp    -rp ${EAR_INSTALL_PATH}/bin/eacct %{buildroot}/@prefix@/bin/
cp    -rp ${EAR_INSTALL_PATH}/bin/ereport %{buildroot}/@prefix@/bin/
cp    -rp ${EAR_INSTALL_PATH}/bin/econtrol %{buildroot}/@prefix@/bin/
cp    -rp ${EAR_INSTALL_PATH}/include/ear.h %{buildroot}/@prefix@/include/
cp    -rp ${EAR_INSTALL_PATH}/lib/libear.* %{buildroot}/@prefix@/lib/
cp	-rp ${EAR_INSTALL_PATH}/lib/libearld.* %{buildroot}/@prefix@/lib/
cp    -rp ${EAR_INSTALL_PATH}/lib/libear_api.a %{buildroot}/@prefix@/lib/libear_api.a
cp    -rp ${EAR_INSTALL_PATH}/lib/plugins/* %{buildroot}/@prefix@/lib/plugins/
cp	-rp ${EAR_INSTALL_PATH}/lib/earplug.so %{buildroot}/@prefix@/lib/
cp	-rp ${EAR_INSTALL_PATH}/bin/erun %{buildroot}/@prefix@/bin/
cp	-rp ${EAR_INSTALL_PATH}/sbin/eargmd %{buildroot}/@prefix@/sbin/
cp	-rp ${EAR_INSTALL_PATH}/sbin/eardbd %{buildroot}/@prefix@/sbin/
cp	-rp ${EAR_INSTALL_PATH}/sbin/eard %{buildroot}/@prefix@/sbin/
cp	-rp ${EAR_INSTALL_PATH}/sbin/edb_create %{buildroot}/@prefix@/sbin/

cp   -p  ${EAR_SOURCE_PATH}/etc/rpms/configure/configure %{buildroot}/@sysconfdir@/
cp  -p  ${EAR_SOURCE_PATH}/etc/systemd/eargmd.service.in %{buildroot}/@sysconfdir@/systemd/system
cp  -p  ${EAR_SOURCE_PATH}/etc/systemd/eardbd.service.in %{buildroot}/@sysconfdir@/systemd/system
cp  -p  ${EAR_SOURCE_PATH}/etc/systemd/eard.service.in %{buildroot}/@sysconfdir@/systemd/system
cp  -p  ${EAR_SOURCE_PATH}/etc/slurm/ear.plugstack.conf.in %{buildroot}/@sysconfdir@/slurm/
cp    -p  ${EAR_SOURCE_PATH}/etc/module/ear.in %{buildroot}/@sysconfdir@/module/
cp    -p  ${EAR_SOURCE_PATH}/etc/conf/ear.conf.template.in %{buildroot}/@sysconfdir@/ear/ear.conf.template.in
cp    -p  ${EAR_SOURCE_PATH}/etc/conf/ear.conf.full.template.in %{buildroot}/@sysconfdir@/ear/ear.conf.full.template.in

cp    -p  ${EAR_ETC}/ear/ear.conf %{buildroot}/@sysconfdir@/ear/ear.conf
cp    -p  ${EAR_ETC}/module/ear %{buildroot}/@sysconfdir@/module/ear
cp    -p  ${EAR_ETC}/module/ear-lite %{buildroot}/@sysconfdir@/module/ear-lite
cp    -p  ${EAR_ETC}/slurm/ear.plugstack.conf %{buildroot}/@sysconfdir@/slurm/ear.plugstack.conf
cp    -p  ${EAR_ETC}/systemd/system/eargmd.service %{buildroot}/@sysconfdir@/systemd/system/eargmd.service
cp    -p  ${EAR_ETC}/systemd/system/eard.service   %{buildroot}/@sysconfdir@/systemd/system/eard.service
cp    -p  ${EAR_ETC}/systemd/system/eardbd.service %{buildroot}/@sysconfdir@/systemd/system/eardbd.service
cp    -p  ${EAR_ETC}/scripts/*                     %{buildroot}/@sysconfdir@/scripts


touch %{buildroot}/@sysconfdir@/ear/ear.conf.template
touch %{buildroot}/@sysconfdir@/ear/ear.conf.full.template

exit

# RPMBuild context
%files
%attr(-, -, -) /@prefix@/*
%exclude @sysconfdir@
%attr(-, -, -) /@sysconfdir@/*

